# coreutils for macOS
alias awk='gawk'
alias od='god'
alias sed='gsed'
alias dircolors='gdircolors'
alias chgrp='gchgrp'
alias chown='gchown'
alias chmod='gchmod'
alias dd='gdd'
alias df='gdf'
alias du='gdu'
alias ln='gln'
alias ls='gls --color=auto'
alias mkdir='gmkdir'
alias mkfifo='gmkfifo'
alias readlink='greadlink'
alias rmdir='grmdir'
alias touch='gtouch'
alias wc='gwc'


# findutils for macOS
alias xargs='gxargs'
alias find='gfind'
alias locale='glocale'
alias updatedb='gupdatedb'

# grep alias
alias grep='ggrep --color=auto'
alias fgrep='gfgrep --color=auto'
alias egrep='gegrep --color=auto'

# colorful alias
test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"

# VERY VERY DENGEROUS COMMANDS!!!!!!!!!!!!!!
alias cp='gcp -i'
alias mv='gmv -i'
alias rm='grm -i'

# some more ls
alias l='gls -CF --color=auto'
alias la='gls -A --color=auto'
alias ll='gls -alF --color=auto'

# emacs
alias em='emacsclient -t -a ""'
alias killem='emacsclient -e "(kill-emacs)"'

